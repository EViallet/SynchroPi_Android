<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/row_mac_enabled"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/disconnected"

            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
        />
        <TextView
            android:id="@+id/row_mac_ip"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:textSize="18sp"
            android:textColor="@android:color/black"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />


        <TextView
            android:id="@+id/row_mac_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@android:color/black"
            android:text="xx:xx:xx:xx:xx:xx"
            android:textAlignment="center"

            android:layout_below="@id/row_mac_ip"
            android:layout_marginStart="60dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/row_mac_selected"
            android:layout_width="35dp"
            android:layout_height="match_parent"

            android:src="@drawable/ic_check"
            android:scaleType="center"
            android:background="@color/colorDialogHeaderAdd"

            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>